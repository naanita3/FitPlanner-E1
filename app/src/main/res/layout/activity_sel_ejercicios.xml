<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#181819"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <View
        android:id="@+id/view2"
        android:layout_width="448dp"
        android:layout_height="60dp"
        android:background="#E3E3E5"
        android:backgroundTint="#D5D5D5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FitPlanner"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="57dp"
        android:layout_height="46dp"
        app:tint="@color/fitplanner_icono2_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:srcCompat="@drawable/pesa_icono" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:background="@drawable/color_button_logblanco"

        android:searchIcon="@android:drawable/ic_menu_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />











    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi rutina"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="121dp" />

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="484dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="247dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Contenido desplazable -->
            <TextView
                android:id="@+id/listaEjercicios"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 1" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 2" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 3" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 4" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 5" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 6" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 7" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 8" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="EJERCICIO 9" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
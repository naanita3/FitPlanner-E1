<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PantallaCereales">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#181819"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <View
        android:id="@+id/view2"
        android:layout_width="448dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FitPlanner"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="57dp"
        android:layout_height="46dp"
        app:tint="@color/fitplanner_icono2_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:srcCompat="@drawable/pesa_icono" />

    <TextView

        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEREALES"
        android:textColor="#F1B04C"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.014" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avena"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_avena" />

            <ImageView
                android:id="@+id/quinoa"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_quinoa" />

            <ImageView
                android:id="@+id/arrozint"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_arrozint" />

            <ImageView
                android:id="@+id/trigosarra"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_trigosarra" />

            <ImageView
                android:id="@+id/cebada"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_cebada" />

            <ImageView
                android:id="@+id/mijo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_mijo" />

            <ImageView
                android:id="@+id/amaranto"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_amaranto"/>

            <ImageView
                android:id="@+id/centeno"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_centeno" />

            <ImageView
                android:id="@+id/bulgur"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_bulgur" />

            <ImageView
                android:id="@+id/espelta"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_espelta" />

            <ImageView
                android:id="@+id/maiz"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_maiz" />

            <ImageView
                android:id="@+id/arrozsalvaje"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_arrozsalv" />

            <ImageView
                android:id="@+id/sorgo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_sorgo"/>

            <ImageView
                android:id="@+id/teff"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_teff" />

            <ImageView
                android:id="@+id/farro"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_farro" />

            <ImageView
                android:id="@+id/kamut"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_kamut" />

            <ImageView
                android:id="@+id/couscousint"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_couscous" />

            <ImageView
                android:id="@+id/pan"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_pan" />

            <ImageView
                android:id="@+id/pasta"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_pasta" />

            <ImageView
                android:id="@+id/granola"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cereal_granola" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>